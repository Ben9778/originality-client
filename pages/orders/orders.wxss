.box{
  width: 100%;
  height: 1450rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  background-color: rgb(241,245,254);
}
.tip{
  width: 100%;
  text-align: center;
  margin-top: 80rpx;
}
.order{width: 100%;}
.order-item{
  width: 90%;
  font-size: smaller;
  margin: 50rpx auto;
  background-color: snow;
  padding: 15rpx;
}
.orderno{
  width: 100%;
  margin-left: 4%;
}
.order-item-box{
  width: 100%;
  display: flex;
