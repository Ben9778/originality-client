/* pages/myhome/myhome.wxss */
.box{
  width: 100%;
  height: 1450rpx;
  background-color: rgb(241,245,254);
  overflow: hidden;
}
.header{
  width: 100%;
  height: 200rpx;
}
.header-left{
  width: 100rpx;
  height: 100rpx;
  margin-left: 45rpx;
  margin-top: 20rpx;
  display: inline-block;
}
.header-right{
  display: inline-block;
  width: 200rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
.vip{
  width: 90%;
  height: 100rpx;
  color: wheat;
  background-color: rgb(132, 99, 163);
  margin: 30rpx auto;
  border-radius: 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tips{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: small;
}
.tips image{
  width: 35rpx;
  height: 35rpx;
}
.opennow{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color:darkorange;
  border-radius: 8px;
  text-align: center;
}
.count{
  width: 90%;
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto;
}
.count-num{
  background-color: white;
  width: 45%;
  height: 100%;
  border-radius: 5px;
  text-align: center;
}
.count-num view{
  margin-top: 25rpx;
}
.contract{
  width: 90%;
  background-color: white;
  font-size: smaller;
  margin: 50rpx auto;
  border-radius: 10px;
}
.study,.advice,.about,.orderCenter{
  width: 90%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  box-sizing: content-box;
  margin-left: 15rpx;
}
.study,.advice,.about{
  border-bottom: 1rpx solid rgb(0,0,0,0.1);
}
