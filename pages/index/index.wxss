.box{
  width: 100%;
  height: 1450rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  background-color: rgb(241,245,254);
}
.showAnswer{
  max-width: 70%;
  min-height: 60rpx;
  background-color: rgb(115,201,255);
  margin: 50rpx auto;
  color: white;
  line-height: 50rpx;
  border-radius: 10px;
  padding: 5rpx;
  display: flex;
  justify-content: center;
} 
.showtime{
  width: 30%;
  margin: 0 auto;
  text-align: center;
}
.response-text{
  width: 80%;
  max-height: 60%;
  background-color: white;
  margin: 30rpx auto;
  overflow-y:scroll;
  border-radius: 10px;
}
.response-text textarea{
  width: 80%;
  margin: 0 auto;
  padding: 30rpx;
  line-height: 60rpx;
}
.copyall{
  width: 30%;
  height: 70rpx;
  border-radius: 10px;
  background-color: rgb(115,201,255);
  color: white;
  margin: 20rpx auto;
  text-align: center;
  line-height: 70rpx;
}
.stopbtn{
  position: fixed;
  bottom: 150rpx;
  left: 35%;
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10px;
  background-color: rgb(115,201,255);
  color: white;
}
.footer-input {
  position: fixed;
  bottom: 10rpx;
  left: 40rpx;
  width: 90%;
  height: 120rpx;
  background-color: white;
  border: 1rpx solid floralwhite;
  z-index: 10;
  border-radius: 5px;
}
.text-area{
  width: 80%;
  height: 120rpx;
  display: inline-block;
}
.text-icon{
  width: 20%;
  display: inline-block;
  height: 120rpx;
  text-align: center;
}
.text-area input {
  height: 120rpx;
  margin-left: 12rpx;
}
.text-icon image{
  width: 60rpx;
  height: 100%;
}
.example{
  width: 90%;
  height: 20%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  border-radius: 10px;
  position: absolute;
  bottom: 35%;
  left: 5%;
}
.example1{
  width: 90%;
  height: 25%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  border-radius: 10px;
  position: absolute;
  bottom: 35%;
  left: 5%;
}
.example-box{
  background-color: rgb(241,245,254);
  width:40%;
  height: 70%;
  border-radius: 10px;
  position: relative;
}
.example-box1{
  background-color: rgb(241,245,254);
  width:40%;
  height: 73%;
  border-radius: 10px;
  position: relative;
}
.example-box-title{
  padding: 20rpx;
}
.example-box-btn{
    width: 40%;
    height: 25%;
    background-color: rgb(135,100,255);
    color: white;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    position: absolute;
    bottom: 12%;
    right: 5%;
    font-size: small;
}